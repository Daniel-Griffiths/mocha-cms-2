/*
|-------------------------------------------------------
| Core Styles
|-------------------------------------------------------
*/ 
    
$color-primary = #1C1F26
$color-secondary = #3D4454
$color-sidebar-secondary = rgba(255,255,255,0.2)
$color-text-primary = #DDD
$color-button = #777B9D
$color-button-success = #50bb6e
$color-button-warning = #DD3E36
$color-table-border = #e2e2e2
$width-sidebar = 16em

*
  box-sizing border-box

html, body 
  margin 0
  padding 0
  font-size 16px
  font-family 'Source Sans Pro',sans-serif
  color $color-text-primary
  height 100%
  background #f5f5f5
  
body
  display flex
  flex-flow row
  justify-content space-between
  
a
  color inherit
  text-decoration none
 
h1, h2, h3, h4, h5, h6
    font-family 'Montserrat', sans-serif
    letter-spacing 3px
    text-transform uppercase
    font-weight initial
    font-size 1.3em
    margin-bottom 0.7em

.fa 
  width 1.5em    
  
/*
|-------------------------------------------------------
| Default Form Styles
|-------------------------------------------------------
*/  

input
  padding 1em
  margin-bottom 1em
  width 100%
  border 1px solid #ccc

/*
|-------------------------------------------------------
| Buttons
|-------------------------------------------------------
*/  

.btn
  display inline-block
  padding 0.5em 1em
  text-align center
  border 1px solid
  background $color-button
  color #fff
  border-radius 3px
  cursor pointer
  transition .1s ease-out
  
  &:hover 
    opacity 0.8
  
/*
|-------------------------------------------------------
| Sidebar
|-------------------------------------------------------
*/

.sidebar
  width $width-sidebar
  background $color-primary
  border-right 5px solid $color-sidebar-secondary
  
  &__navigation
    list-style none
    padding 0
    margin 0
    border-top 1px solid rgba(0,0,0,0.05)
    
  &__link
    padding 1em 2em
    border-top 1px solid rgba(255,255,255,0.05)
    border-bottom 1px solid rgba(0,0,0,0.05)
    text-shadow 1px 1px 0px rgba(0, 0, 0, 0.5)
    transition .1s ease-out
    display block
    
    &--active
      background $color-sidebar-secondary

    &:hover
      background $color-sidebar-secondary
    
  
.profile
  text-align center
  padding 1em
  &__image
    width 5em
    height 5em
    border-radius 50%
    display block
    object-fit cover
    margin auto auto 1em
      

/*
|-------------------------------------------------------
| Body
|-------------------------------------------------------
*/

.container
  height 100%
  width 100%
  padding 1em
  color #333c48
  overflow-y scroll
  -webkit-overflow-scrolling touch
  
/*
|-------------------------------------------------------
| Forms
|-------------------------------------------------------
*/

.form
  max-width 20em
  padding 0.5em 1em 1em 1em

  &__title
    border-bottom 1px solid #E7E7E7
    padding-bottom 0.5em
  
  &__label
    display block
    padding .5em 0
  
  &__input
    display block
    padding 1em
    width 100%
    margin-top: 1em
    border 1px solid #ccc
    border-radius 2px
    
  &__btn
    display block
    padding 1em
    margin-top 1em
    margin-bottom 0

/*
|-------------------------------------------------------
| Table List
|-------------------------------------------------------
*/

.table-list
  width 100% 
  border 1px solid $color-table-border
  margin-top 1em
  border-radius 3px 3px  0 0
  
  &__row
    background: #fff;
    border-top: 1px solid $color-table-border

    &__head
      background $color-secondary
      color $color-text-primary
      
  &__cell
    padding 1em 
    
  &__btn
    padding 0.1em 0.5em
    background #777B9D
    color #fff
    border-radius 2px

    &--green{
      background $color-button-success
    }

    &--red{
      background $color-button-warning
    }
    
    &:hover{
      opacity 0.8
    }
  
/*
|-------------------------------------------------------
| Wysiwyg Editor
|-------------------------------------------------------
*/

.editor
  background #FDFDFD
  border 1px dashed #ccc
  padding 1em
  height calc(100% - 70px)
  
.mce-panel 
  background-color #fff !important
  margin-bottom 1em !important

.mce-btn{
  background #fff !important
}

  
/*
|-------------------------------------------------------
| Menu Editor
|-------------------------------------------------------
*/

.sortable-menu
  
  li
    padding 1em
    margin-bottom 1em
    background rgba(0,0,0,0.05)

/*
|-------------------------------------------------------
| Login Page
|-------------------------------------------------------
*/ 

.login-box 
  display flex
  flex-direction column
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  font-family 'Open Sans',sans-serif
  background #1C1F26
  font-size 18px
    
  &__inner
    max-width: 15em
    padding 1em
    background #fff
    border-radius 5px
    border 5px solid #3D4454

  &__field
    width 100%
    padding 10px 12px
    margin-bottom 1em
    border solid 1px lightgray

  &__btn
    @extend .btn
    padding 10px 12px
    width 100% 
    
  &__error
    background #E13439
    color #fff
    font-size 13px
    text-align center
    padding 10px 12px 
    border-radius 3px
    margin-top 1em

.toast-notifaction 
  position fixed
  top 1em
  right 1em
  padding 10px 70px
  background #3D4454
  text-align center
  border 1px solid rgba(0, 0, 0, 0.2)
  display none
  font-size 1em
  color #fff
  cursor pointer
  transition .3s ease

  &:after 
    font-weight bold
    content "\00d7"
    position absolute
    top 0
    right 0
    background rgba(0, 0, 0, 0.15)
    width 38px
    text-align center
    height 100%
    line-height 39px
    font-size 20px 

/*
|-------------------------------------------------------
| Misc
|-------------------------------------------------------
*/

#container-load
  height 100%

/*
|-------------------------------------------------------
| Responsive Styles
|-------------------------------------------------------
*/

@media (max-width: 700px)
  /* sidebar */
  .sidebar
    width auto
    
    .fa
       text-align center
    
    span, .profile 
      display none
    
  .table-list__cell
    display block 
  


